{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "FrontEnd",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "type": "node-terminal",
            "name": "WebServer",
            "request": "launch",
            "command": "npx hardhat run --network localhost server.js",
            "cwd": "${workspaceFolder}/webserver"
        },
        {
            "type": "node-terminal",
            "name": "WebServerTest",
            "request": "launch",
            "command": "npx hardhat run --network localhost serverTest.js",
            "cwd": "${workspaceFolder}/webserver/test"
        }
    ]
}