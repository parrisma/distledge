{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Front-End",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "type": "node-terminal",
            "name": "Web-Server",
            "request": "launch",
            "command": "npx hardhat run --network localhost server.js",
            "cwd": "${workspaceFolder}/webserver"
        },
        {
            "type": "node-terminal",
            "name": "Web-ServerTest",
            "request": "launch",
            "command": "npx hardhat run --network localhost serverTest.js",
            "cwd": "${workspaceFolder}/webserver/test"
        },
        {
            "type": "node-terminal",
            "name": "Deploy",
            "request": "launch",
            "command": "npx hardhat run --network localhost deploy.js",
            "cwd": "${workspaceFolder}/scripts/deploy"
        }
    ]
}